{
  "name": "conjure-vs-code",
  "displayName": "conjure-vs-code",
  "publisher": "conjure",
  "main": "./dist/main.js",
  "repository": {
    "url": "https://github.com/conjure-cp/conjure-vs-code",
    "type": "git"
  },
  "icon": "image/conjure-logo.png",
  "description": "VS Code extension for conjure",
  "version": "0.3.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:essence"
  ],
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "test": "echo success",
    "deploy": "vsce publish"
  },
  "contributes": {
    "snippets": [
      {
        "language": "essence",
        "path": "./snippets/essenceSnippets.json"
      }
    ],
    "languages": [
      {
        "id": "essence",
        "aliases": [
          "Essence",
          "essence"
        ],
        "extensions": [
          ".essence",
          ".param",
          ".solution"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "essence",
        "scopeName": "source.essence",
        "path": "./syntaxes/essence.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[essence]": {
        "editor.semanticHighlighting.enabled": true
      }
    },
    "semanticTokenScopes": [
      {
        "language": "essence",
        "scopes": {
          "type.defaultLibrary": [
            "storage.type"
          ],
          "macro": [
            "keyword.other.unit"
          ],
          "regexp": [
            "constant.language.bool"
          ],
          "modifier": [
            "emphasis",
            "storage.type"
          ],
          "*.readonly": [
            "emphasis"
          ],
          "*.abstract": [
            "strong"
          ]
        }
      }
    ],
    "configuration": [
      {
        "title": "Conjure",
        "properties": {
          "conjure.executable": {
            "type": "string",
            "default": "",
            "description": "Conjure executable, if on PATH can be left blank"
          },
          "conjure.overrideVersionCheck": {
            "type": "boolean",
            "default": false,
            "description": "Debug only, ignore version check",
            "deprecationMessage": "Should only be used for testing. If version detection is broken please raise an issue"
          }
        }
      }
    ]
  },
  "dependencies": {
    "@types/typescript": "^2.0.0",
    "compare-versions": "^6.1.1",
    "g": "^2.0.1",
    "vscode-languageclient": "^9.0.1",
    "vscx": "^0.3.29"
  },
  "devDependencies": {
    "@types/node": "^22.13.17",
    "@types/vscode": "^1.98.0",
    "@vscode/vsce": "^3.3.2",
    "esbuild": "^0.25.2",
    "typescript": "^5.8.2",
    "vscode": "^1.1.34"
  }
}
